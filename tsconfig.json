{
  "compilerOptions": {
    "outDir": "target/src/",
    "sourceMap": true,
    "noImplicitAny": true,
    "removeComments": true,
    //"declaration": true,
    "allowSyntheticDefaultImports": true,
    "alwaysStrict": true,
    "module": "commonjs",
    "target": "es6",
    "diagnostics": true,
    "listFiles": true,
    "listEmittedFiles": true,
    "jsx": "react",
    "allowJs": true,
    "checkJs": true
  },
  "exclude": [
  	"node_modules"
  ],
  "include": [
  	"src/**/*.ts","src/**/*.js","src/**/*.jsx",
  	"node_modules/'@types'/**/*.d.ts"
  ],
  "awesomeTypescriptLoaderOptions": {
    "useWebpackText": true,
    "forkChecker": true,
    "useCache": true
  },
  "compileOnSave": false,
  "buildOnSave": false
}
